<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".MainActivity"
    tools:showIn="@layout/activity_main">

    <GridLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:layout_margin="20dp"
        android:foregroundGravity="center"
        android:columnCount="2">

        <ImageButton
            android:id="@+id/main_activity_camera"
            android:layout_height="90dp"
            android:layout_width="90dp"
            android:layout_margin="5dp"
            android:src="@drawable/ic_camera">
        </ImageButton>

        <ImageButton
            android:id="@+id/main_activity_chip"
            android:layout_height="90dp"
            android:layout_width="90dp"
            android:src="@drawable/ic_chip">
        </ImageButton>


        <ImageButton
            android:id="@+id/main_activity_microphone"
            android:layout_height="90dp"
            android:layout_width="90dp"
            android:src="@drawable/ic_microphone">
        </ImageButton>

        <ImageButton
            android:id="@+id/main_activity_satellite"
            android:layout_height="90dp"
            android:layout_width="90dp"
            android:src="@drawable/ic_satellite">
        </ImageButton>

    </GridLayout>


</android.support.constraint.ConstraintLayout>